@model MSP_RegProf.Models.Persona


<!--Datos de Personales-->
<div class="col-md-3">
    <div class="box box-primary">
        <div class="box-body box-profile">
            <img class="profile-user-img img-responsive img-circle user-img" src="~/Content/img/nopic.png" alt="User profile picture">

            <h3 class="profile-username text-center">@Model.Nombre @Model.Apellido</h3>

            <p class="text-muted text-center">Profesional</p>

            <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                    <b>DNI:</b> <a class="pull-right">@Model.NroDocumento</a>
                </li>
                <li class="list-group-item">
                    <b>Fecha Nacimiento</b> <a class="pull-right">@Html.DisplayFor(Model => Model.FechaNacimiento)</a>
                </li>
                <li class="list-group-item">
                    <b>Nacionalidad</b> <a class="pull-right">@Html.DisplayFor(Model => Model.Pais.Nombre)</a>
                </li>
            </ul>

            <a href="#" class="btn btn-primary btn-block"><b>Editar Datos</b></a>
        </div>
        <!-- /.box-body -->
    </div>
</div>
<!--Datos de Personales-->
<!--Datos de Titulos-->
<div class="col-md-9">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Listado de Titulos</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            
            <!-- Button trigger modal -->
            @*<button type="button" style="margin-bottom: 15px;" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal" onclick="abrirModal('/Certificado/Create', 'Agregar', 'Certificado')">
                    <i class="fa fa-plus"></i> Nuevo
                </button>*@
            @if (Model.Matricula.Count > 0)
            {
                <table id="dtCertificados" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">
                                Denominacion
                            </th>
                            <th class="text-center">
                                Matricula
                            </th>
                            <th class="text-center">
                                Libro
                            </th>
                            <th class="text-center">
                                Folio
                            </th>
                            <th class="text-center">
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Matricula in Model.Matricula)
                {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => Matricula.Titulo.Descripcion)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => Matricula.NroMatricula)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => Matricula.libro)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => Matricula.Folio)
                                </td>
                                <td>
                                    <div class="btn-group-sm text-center">
                                        <a class="btn btn-default fa fa-upload" data-toggle="modal" data-target="#myModal" onclick="abrirModal('/DigitDocs/SubirDocs/@Model.ID/@Matricula.ID','Cargar','Documentos')"></a>
                                        <a class="btn btn-primary fa fa-eye" data-toggle="modal" data-target="#myModal" onclick="abrirModal('/DigitDocs/VerDocs/@Model.ID/@Matricula.ID','Detalle','Documentos')"></a>
                                        @*<a class="btn btn-danger fa fa-trash" data-toggle="modal" data-target="#myModal" onclick="abrirModal('/DigitDocs/Delete/@item.titId','Eliminar','Certificado')"></a>
                                            <a class="btn btn-primary fa fa-print" onclick="reporte(@item.titId)"></a>*@
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            }
            else
            {
                <!--Mensaje-->
                <div>
                    <div class="alert alert-info alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-info"></i> Atencion!</h4>
                        <p>No existen Titulos registrados para este profesional.</p>
                    </div>
                </div>
            }


    </div>
    <!-- /.box-body -->
</div>
</div>
<!--Datos de Titulos-->
